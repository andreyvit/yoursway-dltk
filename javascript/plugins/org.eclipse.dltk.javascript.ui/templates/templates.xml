    ${methodName}: function (${param}) {
    	${cursor}
    }
});</template>
<template id="org.eclipse.dltk.javascript.ui.templates.javascript.exproto" name="extends_prototype" description="Extend object prototype.js style" context="javascriptUniversalTemplateContextType" enabled="true" deleted="false" autoinsert="true">${ClassName}.prototype = (new ${Base}()).extend({
