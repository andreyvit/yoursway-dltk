	case ${value}:
		${cursor}
		break;

	default:
		break;
}
</template>
<template id="org.eclipse.dltk.javascript.ui.templates.javascript.try" name="try" description="try catch" context="javascriptUniversalTemplateContextType" enabled="true" deleted="false" autoinsert="true">try {
